{
  "service": {
    "name": "demo-service",
    "version": "1.0.0",
    "description": "Demo user management service with real-time notifications",
    "transport": {
      "type": "namedpipe",
      "address": "ekko-demo-service",
      "timeout": 30000,
      "maxConnections": 10
    },
    "tags": ["demo", "user-management", "notifications"]
  },
  "methods": {
    "getUsers": {
      "description": "Get all users in the system",
      "parameters": [],
      "returns": {
        "type": "array",
        "elementType": "object",
        "schema": {
          "id": "number",
          "name": "string",
          "email": "string",
          "createdAt": "string"
        }
      },
      "async": true,
      "timeout": 5000
    },
    "getUserById": {
      "description": "Get a specific user by ID",
      "parameters": [
        {
          "name": "id",
          "type": "number",
          "required": true,
          "description": "User ID to retrieve"
        }
      ],
      "returns": {
        "type": "object",
        "nullable": true,
        "schema": {
          "id": "number",
          "name": "string",
          "email": "string",
          "createdAt": "string"
        }
      },
      "async": true,
      "timeout": 5000
    },
    "createUser": {
      "description": "Create a new user",
      "parameters": [
        {
          "name": "userData",
          "type": "object",
          "required": true,
          "description": "User data for creation",
          "validation": {
            "required": ["name"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "email": { "type": "string", "format": "email" }
            }
          }
        }
      ],
      "returns": {
        "type": "object",
        "schema": {
          "id": "number",
          "name": "string",
          "email": "string",
          "createdAt": "string"
        }
      },
      "async": true,
      "timeout": 10000
    },
    "updateUser": {
      "description": "Update an existing user",
      "parameters": [
        {
          "name": "updateData",
          "type": "object",
          "required": true,
          "description": "User update data",
          "validation": {
            "required": ["id"],
            "properties": {
              "id": { "type": "number" },
              "name": { "type": "string", "minLength": 1 },
              "email": { "type": "string", "format": "email" }
            }
          }
        }
      ],
      "returns": {
        "type": "object",
        "nullable": true,
        "schema": {
          "id": "number",
          "name": "string",
          "email": "string",
          "createdAt": "string"
        }
      },
      "async": true,
      "timeout": 10000
    },
    "deleteUser": {
      "description": "Delete a user by ID",
      "parameters": [
        {
          "name": "id",
          "type": "number",
          "required": true,
          "description": "User ID to delete"
        }
      ],
      "returns": {
        "type": "object",
        "schema": {
          "success": "boolean",
          "message": "string",
          "deletedUser": "object"
        }
      },
      "async": true,
      "timeout": 10000
    }
  },
  "events": {
    "user.created": {
      "description": "Fired when a new user is created",
      "category": "user-events",
      "priority": "normal",
      "schema": {
        "id": "number",
        "name": "string",
        "timestamp": "string"
      }
    },
    "user.updated": {
      "description": "Fired when a user is updated",
      "category": "user-events",
      "priority": "normal",
      "schema": {
        "id": "number",
        "changes": "object",
        "timestamp": "string"
      }
    },
    "user.deleted": {
      "description": "Fired when a user is deleted",
      "category": "user-events",
      "priority": "normal",
      "schema": {
        "id": "number",
        "name": "string",
        "timestamp": "string"
      }
    },
    "notifications": {
      "description": "General system notifications",
      "category": "system",
      "priority": "low",
      "schema": {
        "message": "string",
        "timestamp": "string",
        "type": "string",
        "source": "string"
      }
    }
  },
  "channels": {
    "user-events": {
      "description": "Channel for all user-related events",
      "type": "topic",
      "persistent": false,
      "maxSubscribers": 100
    },
    "notifications": {
      "description": "Channel for system notifications",
      "type": "broadcast",
      "persistent": false,
      "maxSubscribers": null
    },
    "admin-alerts": {
      "description": "Channel for administrative alerts",
      "type": "topic", 
      "persistent": true,
      "maxSubscribers": 10,
      "retention": {
        "maxMessages": 1000,
        "maxAge": 86400,
        "maxSize": 1048576
      }
    }
  }
}